# Writers Room X Backend Environment Variables

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/writers_room_x

# Redis Configuration (for background jobs)
REDIS_URL=redis://localhost:6379

# Application Settings
APP_NAME="Writers Room X"
DEBUG=false
LOG_LEVEL=INFO
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5000", "https://your-frontend-domain.com"]

# OpenRouter API (optional - users can provide their own keys via BYOK)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# S3/Object Storage (optional)
S3_ENDPOINT=https://your-s3-endpoint.com
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_CDN_DOMAIN=your-cdn-domain.com
S3_SIGNING_SECRET=your-signing-secret

# Monitoring (optional)
ALERT_WEBHOOK_URL=https://your-webhook-url.com